<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="member">
	<!-- select 된 row 를 어떤 type 인지 mybatis 에게 알려주어야 한다 -->
	<!-- row 가 여러 개이면 자동으로 list 에 담아준다 -->
	<select id="getList" resultType="com.example.spring06.dto.MemberDto">
		SELECT num, name, addr
		FROM member
		ORDER BY num ASC
	</select>
	
	<!-- 파라미터에 전달된게 자동으로 num 바인딩 -->
	<select id="getData" parameterType="int" resultType="com.example.spring06.dto.MemberDto">
		SELECT num, name, addr
		FROM member
		WHERE num=#{num}
	</select>
	
	<insert id="insert" parameterType="com.example.spring06.dto.MemberDto">
		INSERT INTO member
		(num, name, addr)
		VALUES(member_seq.NEXTVAL, #{name}, #{addr})
	</insert>
	<!-- 삭제 -->
	<delete id="delete" parameterType="int">
		DELETE FROM member
   		WHERE num = #{num}
	</delete>
	<!-- 수정 -->
	<update id="update" parameterType="com.example.spring06.dto.MemberDto">
		UPDATE member
		SET name = #{name},addr = #{addr}
		WHERE num = #{num}
	</update>
</mapper>